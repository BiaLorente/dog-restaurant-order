{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2021",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
  },
  "include": [
    "src/**/*.ts",  // Includes all TypeScript files in src subfolders
    "test/**/*.ts"  // Includes all TypeScript files in test subfolders
  ],
  "exclude": [
    "node_modules",  // Exclude node_modules for performance
    "dist",           // Exclude built files to avoid linting/output clashes
    "cucumber.mjs"
  ]
}
